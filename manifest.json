{
  "manifest_version": 3,
  "name": "Facebook Time Blocker",
  "version": "1.0",
  "description": "Blocks Facebook after a specified time",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://*.facebook.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html"
  }
}